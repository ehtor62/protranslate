# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Firebase Client SDK (Public - safe to expose to browser)
# Get from: Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK (Server-side only - KEEP SECRET!)
# Required for authentication verification
FIREBASE_PROJECT_ID=your-project-id

# Optional: For production deployment (Vercel, etc.)
# Generate from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Convert JSON to single line and paste here
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Stripe Configuration
# Get from: Stripe Dashboard > Developers > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here
# Application URL (for email verification links)
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend Email Service (Optional - for instant email delivery)
# HIGHLY RECOMMENDED: Firebase default email service has 6+ hour delays
# Get from: https://resend.com/api-keys
# Free tier: 3,000 emails/month - excellent for most apps!
# See RESEND_SETUP.md for full setup instructions
RESEND_API_KEY=re_your-resend-api-key-here
RESEND_FROM_EMAIL=noreply@sentenly.com
